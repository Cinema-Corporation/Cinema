@model IEnumerable<BusinessLogic.DTOs.SessionDTO>
@{
    ViewData["Title"] = "Choose Session";
    var movieId = ViewBag.MovieId as int?;
}

<h2>Choose a Session</h2>
@if (Model == null || !Model.Any())
{
    <p>No sessions available for this movie.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>SessionId</th>
            <th>TimeStart</th>
            <th>TimeEnd</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.SessionId</td>
                <td>@session.TimeStart</td>
                <td>@session.TimeEnd</td>
                <td>
                    <a asp-action="ChooseSeat" asp-route-sessionId="@session.SessionId"
                       class="btn btn-primary">Choose Seat</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}