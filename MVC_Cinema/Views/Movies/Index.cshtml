@model List<WebApp.Models.MovieViewModel>

@{
    ViewData["Title"] = "Movies";
}

<!-- MOVIES SECTION -->
<div class="bg-light py-5 coming-soon-section">
    <div class="container">
        <div class="row text-center mb-4">
            <h2 class="fw-bold">Available Movies</h2>
            <p class="text-muted">Buy tickets now!</p>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @if (Model != null && Model.Any())
            {
                foreach (var movie in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="https://image.tmdb.org/t/p/w500/@(movie.PosterUrl)"
                                 class="card-img-top"
                                 alt="@movie.Name">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Name</h5>
                                @if (!string.IsNullOrWhiteSpace(movie.Description) && movie.Description.Length > 130)
                                {
                                    <p class="card-text text-muted small">@movie.Description.Substring(0, 130).TrimEnd()...</p>
                                }
                                else
                                {
                                    <p class="card-text text-muted small">@movie.Description</p>
                                }
                            </div>
                            <div class="card-footer d-flex text-center">
                                <a class="btn btn-outline-primary w-100 mx-3" asp-area="" asp-controller="Movies" asp-action="Details" asp-route-id="@movie.MovieId" >Details</a>
                                <button class="btn btn-outline-primary w-100 mx-3">Buy Tickets</button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">No movies available at the moment.</p>
            }
        </div>
    </div>
</div>

<!-- CONTACT / FOOTER SECTION -->
<div class="container-fluid bg-dark text-white py-5">
    <div class="container text-center">
        <h3 class="fw-bold">Stay Connected</h3>
        <p class="mt-3">
            Sign up for our newsletter to receive updates about upcoming releases,<br>
            exclusive events, and special offers.
        </p>
        <div class="d-flex flex-column flex-sm-row justify-content-center mt-4">
            <input type="email"
                   class="form-control form-control-lg mb-2 mb-sm-0 me-sm-2"
                   placeholder="Enter your email"
                   aria-label="Email">
            <button class="btn btn-primary btn-lg">Subscribe</button>
        </div>
    </div>
</div>