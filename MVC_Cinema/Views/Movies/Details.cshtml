@model WebApp.Models.MovieViewModel

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 text-center">
            <img class="img-fluid rounded shadow" src="https://image.tmdb.org/t/p/w500/@Model.PosterUrl" alt="Poster" />
        </div>
        <div class="col-md-8">
            <h1 class="display-4">@Model.Name</h1>
            <p class="lead text-muted">@Model.Description</p>

            <div class="mt-3">
                <p><strong>Rating:</strong> <span class="badge bg-primary">@Model.Rating</span></p>
                <p><strong>Duration:</strong> <span class="badge bg-secondary">
                    @{
                        var hours = Model.Duration / 60;
                        var minutes = Model.Duration % 60;
                        @($"{hours}h {minutes}m");
                    }
                </span></p>

                @if (Model.Genres != null && Model.Genres.Any())
                {
                    <p><strong>Genres:</strong> <span class="badge bg-success">@string.Join("</span> <span class='badge bg-success'>", Model.Genres)</span></p>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {
                <div class="mt-4">
                    <h3 class="h5">Trailer</h3>
                    <iframe width="400" height="225" src="https://www.youtube.com/embed/@Model.TrailerUrl" frameborder="0" allowfullscreen></iframe>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 1rem;
    }
    img {
        max-height: 500px;
    }
</style>
