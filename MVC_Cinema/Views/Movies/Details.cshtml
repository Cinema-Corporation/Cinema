@model WebApp.Models.MovieViewModel

@{
    ViewData["Title"] = "Movie Details";
}

<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/movie-details.css" />

<div class="container text-light movie-details">
    <div class="row">
        <div class="col-md-4">
            <div class="poster-box">
                <img class="poster" src="https://image.tmdb.org/t/p/w500/@Model.PosterUrl" alt="@Model.Name Poster">
            </div>
        </div>
        <div class="col-md-8">
            <div class="title-box mb-4">
                <h1 class="display-4 movie-title">@Model.Name</h1>
                <p class="lead text-muted">@Model.Description</p>
            </div>
            <div class="info-box mb-4">
                <p><strong>Genres:</strong> <span class="badge custom-badge">@Model.GetFormattedGenres()</span></p>
                <p><strong>Rating:</strong> <span class="badge custom-badge">@Model.Rating</span></p>
                <p><strong>Duration:</strong> <span class="badge custom-badge">@Model.GetFormattedDuration()</span></p>
            </div>

            @if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {
                <div class="trailer-box pb-4">
                    <h3 class="h5 trailer-title">Trailer</h3>
                    <iframe class="trailer" src="https://www.youtube.com/embed/@Model.TrailerUrl" frameborder="0" allowfullscreen></iframe>
                </div>
            }
        </div>
    </div>
</div>
