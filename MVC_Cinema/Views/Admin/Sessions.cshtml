@model WebApp.ViewModels.SessionsMoviesViewModel

@{
    ViewData["Title"] = "Sessions";
}

<div class="container text-light movies-section" style="width: calc(100% - 40px)">
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary" style="margin-bottom: 20px " asp-action="Session" asp-controller="Admin" >Add Session</a>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var session in Model.Sessions)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="padding: 10px">
                    <h3>@Model.Movies.FirstOrDefault(m => m.Id == session.MovieId)?.Name</h3>
                    <p>Start: @session.TimeStart</p>
                    <p>End: @session.TimeEnd</p>
                    <p>Hall: @session.HallId</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a class="btn btn-primary w-50" style="margin: 0px 10px;" asp-action="SelectSession" asp-controller="Admin" asp-route-id="@session.Id">Edit</a>
                        <a class="btn btn-primary w-50" style="margin: 0px 10px;" asp-action="DeleteSession" asp-controller="Admin" asp-route-id="@session.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
