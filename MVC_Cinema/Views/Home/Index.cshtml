@{
    ViewData["Title"] = "Home Page";
}
<!-- HERO SECTION-->
<div class="bg-dark text-white position-relative hero-section">
    <div class="h-100 w-100" style="background-color: rgba(0, 0, 0, 0.4);">
        <div class="container h-100 d-flex flex-column justify-content-center align-items-center text-center">
            <h1 class="display-2 fw-bold">Cinema</h1>
            <p class="lead fs-4 mt-3">
                Immerse yourself in the latest blockbusters<br>
                and beloved classics, all in one place!
            </p>
            <div class="mt-4">
                <button class="btn btn-primary btn-lg me-2">View Showtimes</button>
                <button class="btn btn-outline-light btn-lg">Buy Tickets</button>
            </div>
        </div>
    </div>
</div>

<!-- "COMING SOON" SECTION -->
<div class="bg-light py-5 coming-soon-section">
    <div class="container">
        <div class="row text-center mb-4">
            <h2 class="fw-bold">Coming Soon</h2>
            <p class="text-muted">Get ready for these upcoming releases</p>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @* This is an example. We'll use Foreach and pull images from the database *@
            <!-- Card 1 -->
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="https://img-assets.drafthouse.com/images/shows/heart-eyes/HEART-EYES_sp-poster.jpg?ixlib=js-2.3.2&amp;auto=compress&amp;fit=clip&amp;q=80&amp;ar=1024%3A691&amp;w=282"
                         class="card-img-top"
                         alt="Coming Soon 1">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Movie 1</h5>
                        <p class="card-text text-muted">A spectacular journey awaits. Don’t miss its premiere!</p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-outline-primary w-100">Details</button>
                    </div>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="https://img-assets.drafthouse.com/images/shows/paddington-in-peru/PADDINGTON-IN-PERU_sp-poster.jpg?ixlib=js-2.3.2&amp;auto=compress&amp;fit=clip&amp;q=80&amp;ar=1024%3A691&amp;w=282"
                         class="card-img-top"
                         alt="Coming Soon 2">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Movie 2</h5>
                        <p class="card-text text-muted">The sequel to the biggest hit of the year is almost here.</p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-outline-primary w-100">Details</button>
                    </div>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="https://img-assets.drafthouse.com/images/shows/flight-risk/FLIGHT-RISK_sp-poster.jpg?ixlib=js-2.3.2&auto=compress&fit=clip&q=80&ar=1024%3A691&w=282"
                         class="card-img-top"
                         alt="Coming Soon 3">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Movie 3</h5>
                        <p class="card-text text-muted">Be the first to see this highly anticipated release.</p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-outline-primary w-100">Details</button>
                    </div>
                </div>
            </div>
            @* This is an example. We'll use Foreach and pull images from the database *@
        </div>
    </div>
</div>

<!-- CONTACT / FOOTER SECTION -->
<div class="container-fluid bg-dark text-white py-5">
    <div class="container text-center">
        <h3 class="fw-bold">Stay Connected</h3>
        <p class="mt-3">
            Sign up for our newsletter to receive updates about upcoming releases,<br>
            exclusive events, and special offers.
        </p>
        <div class="d-flex flex-column flex-sm-row justify-content-center mt-4">
            <input type="email"
                   class="form-control form-control-lg mb-2 mb-sm-0 me-sm-2"
                   placeholder="Enter your email"
                   aria-label="Email">
            <button class="btn btn-primary btn-lg">Subscribe</button>
        </div>
    </div>
</div>