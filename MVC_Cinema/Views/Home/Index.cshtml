@model List<WebApp.Models.MovieViewModel>

@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="~/css/">

<!-- HERO SECTION -->
<div class="hero-section bg-dark text-white position-relative">
    <div class="h-100 w-100" style="background-color: rgba(0, 0, 0, 0.4);">
        <div class="container h-100 d-flex flex-column justify-content-center align-items-center text-center">
            <h1 class="display-2 fw-bold">Cinema</h1>
            <p class="lead fs-4 mt-3">
                Immerse yourself in the latest blockbusters<br>
                and beloved classics, all in one place!
            </p>
            <div class="mt-4">
                <button class="btn btn-primary btn-lg me-2">View Showtimes</button>
                <button class="btn btn-outline-light btn-lg">Buy Tickets</button>
            </div>
        </div>
    </div>
</div>

<!-- COMING SOON SECTION -->
<div class="coming-soon-section bg-dark text-light py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <h2 class="fw-bold">Coming Soon</h2>
            <p class="text-muted">Get ready for these upcoming releases</p>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @if (Model != null && Model.Any())
            {
                foreach (var movie in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm text-light">
                            <img src="https://image.tmdb.org/t/p/w500/@(movie.PosterUrl)"
                                 class="card-img-top rounded-top"
                                 alt="@movie.Name">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Name</h5>
                                <p class="card-text text-muted">Check out this blockbuster!</p>
                            </div>
                            <div class="card-footer d-flex">
                                <a class="btn btn-outline-light w-50 me-2" asp-area="" asp-controller="Home" asp-action="Details" asp-route-id="@movie.MovieId">Details</a>
                                <button class="btn btn-outline-light w-50">Buy Tickets</button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">No movies available at the moment.</p>
            }
        </div>
    </div>
</div>

<!-- CONTACT / FOOTER SECTION -->
<div class="contact-section bg-dark text-light py-5">
    <div class="container text-center">
        <h3 class="fw-bold text-primary">Stay Connected</h3>
        <p class="mt-3">
            Sign up for our newsletter to receive updates about upcoming releases,<br>
            exclusive events, and special offers.
        </p>
        <div class="d-flex flex-column flex-sm-row justify-content-center mt-4">
            <input type="email"
                   class="form-control form-control-lg mb-2 mb-sm-0 me-sm-2 bg-secondary text-light"
                   placeholder="Enter your email"
                   aria-label="Email">
            <button class="btn btn-primary btn-lg">Subscribe</button>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #181818;
        color: #ffffff;
    }

    .hero-section {
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: url('https://via.placeholder.com/1920x800') center/cover no-repeat;
        position: relative;
        border-radius: 20px;
        overflow: hidden;
    }

    .coming-soon-section {
        background-color: #121212;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
    }

    .card {
        background-color: #121212;
        border: 2px solid #d236d3;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
    }

    .card-body {
        border-radius: 20px;
    }

    .card-title {
        color: #d236d3;
    }

    .card-footer {
        background-color: #121212;
        border-top: 1px solid #333;
        display: flex;
        justify-content: space-between;
        padding: 10px 15px;
    }

    .contact-section {
        background-color: #121212;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
    }

    input[type="email"] {
        background-color: #212121;
        color: #ffffff;
        border: 1px solid #444;
        border-radius: 10px;
        padding: 10px;
    }

    input[type="email"]:focus {
        outline: none;
        box-shadow: 0 0 5px rgba(210, 54, 211, 0.8);
        border-color: #d236d3;
    }

    button {
        border-radius: 15px !important;
    }
    
    button.btn-primary {
        background-color: #d236d3;
        border-color: #d236d3;
    }

    button.btn-primary:hover {
        background-color: #c126c2;
        border-color: #c126c2;
    }

    button.btn-outline-light {
        color: #d236d3;
        border-color: #d236d3;
    }

    button.btn-outline-light:hover {
        background-color: #d236d3;
        border-color: #d236d3;
        color: #ffffff;
    }
</style>
