@model IEnumerable<BusinessLogic.DTOs.SessionWithMovieDTO>

<div class="container my-4">
    <div class="accordion" id="sessionAccordion">
        @{
            var groupedSessions = Model.GroupBy(s => s.Session.TimeStart.Date).OrderBy(g => g.Key).ToList();
            int visibleDates = 5; // Number of fully visible dates
            int count = 0;
        }

        @foreach (var dayGroup in groupedSessions)
        {
            count++;

            <!-- Generate a unique ID for each collapsible section -->
            var collapseId = "collapse_" + dayGroup.Key.ToString("yyyyMMdd");

            <!-- Show first 5 dates fully, others will be hidden under a collapsible dropdown -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading_@collapseId">
                    <button class="accordion-button @(count > visibleDates ? "collapsed" : "")"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#@collapseId"
                            aria-expanded="@(count <= visibleDates ? "true" : "false")"
                            aria-controls="@collapseId">
                        📅 @dayGroup.Key.ToString("dddd, dd MMMM yyyy")
                    </button>
                </h2>

                <div id="@collapseId"
                     class="accordion-collapse collapse @(count <= visibleDates ? "show" : "")"
                     aria-labelledby="heading_@collapseId">
                    <div class="accordion-body">
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            @foreach (var item in dayGroup.OrderBy(s => s.Session.TimeStart))
                            {
                                <div class="col">
                                    <div class="card mb-3 shadow-sm border-0" style="max-width: 540px;">
                                        <div class="row g-0">
                                            <!-- Movie Poster -->
                                            <div class="col-md-4 d-flex align-items-center justify-content-center">
                                                <img src="@($"https://image.tmdb.org/t/p/w500{item.Movie?.PosterUrl}")"
                                                     class="img-fluid rounded-start"
                                                     alt="@item.Movie?.Name"
                                                     width="200"
                                                     height="300"
                                                     style="object-fit: contain; background-color: #f8f9fa;">
                                            </div>

                                            <!-- Movie Info -->
                                            <div class="col-md-8">
                                                <div class="card-body d-flex flex-column">
                                                    <h5 class="card-title text-primary fw-bold">@item.Movie?.Name</h5>

                                                    @if (!string.IsNullOrWhiteSpace(item.Movie?.Description) && item.Movie.Description.Length > 120)
                                                    {
                                                        <p class="card-text text-muted small">@item.Movie.Description.Substring(0, 120)...</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="card-text text-muted small">@item.Movie?.Description</p>
                                                    }

                                                    <ul class="list-unstyled small">
                                                        <li><strong>⭐ Rating:</strong> @(item.Movie?.Rating.ToString("0.0"))</li>
                                                        <li><strong>🕒 Duration:</strong> @item.Movie?.Duration min</li>
                                                        <li><strong>⏰ Start:</strong> @item.Session.TimeStart.ToString("HH:mm")</li>
                                                        <li><strong>⌛ End:</strong> @item.Session.TimeEnd.ToString("HH:mm")</li>
                                                        <li><strong>🎭 Hall:</strong> @item.Session.HallId</li>
                                                    </ul>

                                                    <!-- "Buy Ticket" Button -->
                                                    <a href="/buy-ticket/@item.Session.SessionId" class="btn btn-primary btn-sm mt-auto" target="_blank">
                                                        🎟 Buy Ticket
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>